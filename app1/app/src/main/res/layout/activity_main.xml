<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMainHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Stand de Carros"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="13pt" />

    <TextView
        android:id="@+id/tvMainMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stand de Carros"
        android:textAlignment="center"
        android:textSize="40dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etMainNome"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:hint="Nome"
            android:inputType="text"
            android:layout_weight="6" />

        <Space
            android:layout_width="15pt"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/etMainSexo"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:hint="Sexo(F, M ou ND)"
            android:inputType="text"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/btnMainSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Submit" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <!-- Container para o menu -->
    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>
